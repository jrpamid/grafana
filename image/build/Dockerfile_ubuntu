# defaults to  latest centos version 8
ARG ubuntu_ver=8

# defaults to latest grafana version
ARG grafana_ver=6.7.2

FROM centos:${centos_ver}

ARG grafana_ver

LABEL author=jrpamid.cloudops@gmail.com \
      app_name=grafana \
      app_version=6.7.2 \
      app_description="OpenSource Dashboard tool"

ENV GRAFANA_PKG=grafana-${grafana_ver}.linux-amd64.tar.gz 
ENV GRAFANA_URL=https://dl.grafana.com/oss/release/${GRAFANA_PKG} \
    GRAFANA_USER=grafana \
    GRAFANA_DATA=/opt/grafana/data \
    PATH=$PATH:/opt/grafana/bin:/opt/grafana/scripts 

COPY files-to-add/scripts/ /tmp/scripts/


RUN yum update -y \
    && yum install -y wget tar gzip unzip \
    && mkdir -p /opt/grafana \
    && mkdir -p ${GRAFANA_DATA}/log \
    && mkdir -p /opt/grafana/{scripts,custom} \
    && groupadd ${GRAFANA_USER} \
    && useradd -g ${GRAFANA_USER} -r ${GRAFANA_USER} \
    && cd /tmp \
    && wget -q ${GRAFANA_URL} \
    && tar -xzf /tmp/${GRAFANA_PKG} -C /opt/grafana --strip-components=1 \
    && cp /tmp/scripts/* /opt/grafana/scripts \
    && touch /opt/grafana/data/log/grafana.log \
    && ln -s /opt/grafana/data/log/grafana.log stdout \
    && /opt/grafana/scripts/setup_plugins.sh | tee stdout \
    && chown -R ${GRAFANA_USER}:${GRAFANA_USER} /opt/grafana \
    && chmod -R 775 /opt/grafana \
    && rm -Rf /tmp/grafana* \
    && rm -Rf /tmp/scripts \
    && yum clean all  

USER ${GRAFANA_USER}

WORKDIR /opt/grafana/bin

EXPOSE 3000    

ENTRYPOINT ["grafana-server"]
CMD ["--config","/opt/grafana/conf/sample.ini"]
